<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.csu.mypetstore.persistence.LineItemMapper">
    <select id="getLineItemsByOrderId" resultType="org.csu.mypetstore.domain.LineItem">
        select * from lineitem where orderid=#{orderId}
    </select>
    <insert id="insertLineItem" useGeneratedKeys="true" keyProperty="lineNumber" parameterType="org.csu.mypetstore.domain.LineItem">
        insert into lineitem(orderid,itemid,quantity,unitprice) values(#{orderId},#{itemId},#{quantity},#{unitPrice})
    </insert>
</mapper>